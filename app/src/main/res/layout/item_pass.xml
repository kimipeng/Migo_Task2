<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_corner">

    <TextView
        android:id="@+id/tv_purchaseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase Time"
        app:layout_constraintBottom_toBottomOf="@+id/tv_PassType"
        app:layout_constraintEnd_toStartOf="@+id/tv_passStatus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_PassType"
        app:layout_constraintTop_toTopOf="@+id/tv_PassType" />

    <TextView
        android:id="@+id/tv_passStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/tv_purchaseTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_purchaseTime"
        app:layout_constraintTop_toTopOf="@+id/tv_purchaseTime" />

    <TextView
        android:id="@+id/tv_PassType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="PassType"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_purchaseTime"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:transitionName="item_transition"/>


</androidx.constraintlayout.widget.ConstraintLayout>